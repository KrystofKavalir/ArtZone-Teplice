<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="Img/logo_v2_icon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/Style/adminEditUzivatel.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Upravit uživatele</title>
    <style>
        a { text-decoration: none; }
        main {
            margin-top: 110px;
            margin-bottom: 40px;
            margin-left: auto;
            margin-right: auto;
            max-width: 540px;
            padding: 0 10px;
        }
        @media (max-width: 575.98px) {
            main {
                margin-top: 90px;
                margin-bottom: 20px;
                max-width: 100%;
                padding: 0 5px;
            }
        }
        .admin-card {
            border-radius: 1.5rem !important;
            box-shadow: 0 4px 24px rgba(0,0,0,0.08);
            background: #fff;
            margin-bottom: 2rem;
        }
        .form-control, .form-select, textarea {
            border-radius: 1rem !important;
        }
        .btn-edit-uzivatel {
            display: inline-block;
            width: 100%;
            height: 50px;
            font-size: x-large;
            font-weight: 600;
            color: #1c1c1c;
            background-color: #ececec;
            border-style: groove;
            border-color: #5e5e5e;
            border-radius: 15px;
            text-align: center;
            line-height: 50px;
            text-decoration: none;
            margin-top: 10px;
            transition: 100ms ease;
        }
        .btn-edit-uzivatel:hover {
            cursor: pointer;
            background-color: #bfbfbf;
        }
        .admin-section-title {
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 1.2rem;
            text-align: center;
        }
        .uprCasti {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <header id="header">
        <a href="/" class="logo"><img class="logo" src="Img/logo.png"></a>
        <nav class="navBar">
            <a href="/">Domů</a>
            <a href="/umelci">Umělci</a>
            <a href="/kalendar">Kalendář akcí</a>
            <a href="/kontakt">Kontakt</a>
        </nav>
        <span class="openbtn" onclick="openNav()">&#9776; Menu</span>
        <a href="/profil" class="profPic w3-display-right"><img class="profPic w3-circle" src="https://static.vecteezy.com/system/resources/previews/005/544/718/non_2x/profile-icon-design-free-vector.jpg" alt=""></a>
    </header>

    <div id="sidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/">Domů</a>
        <a href="/umelci">Umělci</a>
        <a href="/kalendar" class="active">Kalendář akcí</a>
        <a href="/kontakt">Kontakt</a>
    </div>

    <main>
        <div class="card admin-card p-4">
            <h1 class="admin-section-title mb-4">Upravit uživatele</h1>
            <form action="/adminEditUzivatel" method="post" class="form-edit-uzivatel">
                <input type="hidden" name="id" value="<%= user.id %>">
                <div class="uprCasti">
                    <label for="name" class="form-label">Jméno:</label>
                    <input type="text" id="name" name="name" value="<%= user.jmeno %>" required class="form-control">
                </div>
                <div class="uprCasti">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" value="<%= user.email %>" required class="form-control">
                </div>
                <div class="uprCasti">
                    <label for="password" class="form-label">Heslo:</label>
                    <input type="password" id="password" name="password" class="form-control">
                </div>
                <div class="uprCasti">
                    <label for="description" class="form-label">Popis:</label>
                    <textarea id="description" name="description" class="form-control"><%= user.popis %></textarea>
                </div>
                <div class="uprCasti">
                    <label for="role" class="form-label">Role:</label>
                    <select id="role" name="role" required class="form-select">
                        <% roles.forEach(role => { %>
                            <option value="<%= role.id %>" <%= user.role_id === role.id ? 'selected' : '' %>><%= role.nazev %></option>
                        <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn-edit-uzivatel">Uložit změny</button>
            </form>
        </div>
    </main>

    <script>
        function openNav() {
            document.getElementById("sidebar").style.width = "250px";
        }
        function closeNav() {
            document.getElementById("sidebar").style.width = "0";
        }
    </script>
</body>
</html>